{
    "manifest_version": 3,
    "name": "YTC",
    "version": "1.0",
    "description": "YTC",
    "action": {
        "default_popup": "YTC.html",
        "default_icon": "assets/logo.png"
    },
    "icons": {
        "16": "assets/icon-16.png",
        "32": "assets/icon-32.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "side_panel": {
        "default_path": "YTC.html"
    },
    "permissions": [
        "sidePanel",
        "tabs",
        "activeTab",
        "scripting",
        "storage"
    ],
    "content_scripts": [
        {
            "js": ["./src/scripts/script.js"],
            "matches": [
                "https://youtube.com/*/*",
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}